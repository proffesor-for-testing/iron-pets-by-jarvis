# ===========================================
# Iron Pets Frontend Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values

# App Configuration
NEXT_PUBLIC_APP_NAME="Iron Pets"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001/api/v1"

# Stripe Configuration (Publishable Key - safe to expose)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Algolia Search (Search-only Key - safe to expose)
NEXT_PUBLIC_ALGOLIA_APP_ID="your_algolia_app_id"
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY="your_algolia_search_key"
NEXT_PUBLIC_ALGOLIA_INDEX="ironpets_products"

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=""
NEXT_PUBLIC_SENTRY_DSN=""
GOOGLE_SITE_VERIFICATION=""

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT="false"
NEXT_PUBLIC_ENABLE_PET_PROFILES="true"
NEXT_PUBLIC_ENABLE_RECOMMENDATIONS="true"
