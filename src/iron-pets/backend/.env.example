# ===========================================
# Iron Pets Backend Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV="development"
PORT=3001

# Database (PostgreSQL)
DATABASE_URL="postgresql://ironpets:ironpets_secret@localhost:5432/iron_pets?schema=public"

# Redis Cache
REDIS_URL="redis://:ironpets_redis@localhost:6379"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Stripe Payment Processing
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_PUBLISHABLE_KEY="pk_test_your_publishable_key"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Email Service (SendGrid)
SENDGRID_API_KEY="SG.your_sendgrid_api_key"
SENDGRID_FROM_EMAIL="noreply@ironpets.com"
SENDGRID_FROM_NAME="Iron Pets"

# Search Service (Algolia)
ALGOLIA_APP_ID="your_algolia_app_id"
ALGOLIA_API_KEY="your_algolia_admin_api_key"
ALGOLIA_SEARCH_KEY="your_algolia_search_key"
ALGOLIA_INDEX="ironpets_products"

# Shipping Service (Shippo)
SHIPPO_API_KEY="your_shippo_api_key"

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="iron-pets-assets"
AWS_S3_PUBLIC_URL="https://iron-pets-assets.s3.amazonaws.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="debug"
LOG_FORMAT="dev"
