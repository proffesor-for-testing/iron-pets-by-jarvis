# Iron Pets Environment Configuration
# Copy this file to .env and update the values

# ============================================
# Database Configuration
# ============================================
DB_USER=ironpets
DB_PASSWORD=ironpets_secret
DB_NAME=iron_pets
DB_PORT=5432

# ============================================
# Redis Configuration (optional)
# ============================================
REDIS_PASSWORD=ironpets_redis
REDIS_PORT=6379

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
API_PORT=3001
WEB_PORT=3000

# CORS - comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000

# App base URL (used for email links, etc.)
APP_BASE_URL=http://localhost:3000

# ============================================
# Authentication
# ============================================
# Must be at least 32 characters
JWT_SECRET=change-this-to-a-secure-secret-at-least-32-chars
JWT_REFRESH_SECRET=change-this-to-another-secure-secret-32-chars
SESSION_SECRET=another-session-secret-at-least-32-characters

# ============================================
# External Services
# ============================================
# Set to 'true' to use mock services for development
USE_MOCK_SERVICES=true

# Stripe - Leave empty to use mock service
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# SendGrid - Leave empty to use mock service
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@ironpets.local

# ============================================
# Frontend Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
NEXT_PUBLIC_DEMO_MODE=false
